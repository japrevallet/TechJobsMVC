<h1>@ViewBag.title</h1>

<form action="/Search/Results" method="post">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields
    @foreach (Dictionary<string, string> job in ViewBag.jobs) // loops each job 

    {<table class="job-listing">
    
    <tbody>
        @foreach (KeyValuePair<string, string> i in job) // loops each column and value in specific job 
        {
            <tr>
                <td>@i.Key.ToUpper()</td> 
                <td>@i.Value</td>
            </tr>
        }
    </tbody>
</table>


    }
}

